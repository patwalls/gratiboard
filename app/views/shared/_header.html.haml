%section.green-section.no-gradient
  .header
    .logo
      = link_to root_path, class: "strip-color" do
        = image_tag "gratiboard.png", class: "logo-image"
    .right
      - if current_user
        = link_to "Dashboard", user_path(current_user), class: "strip-color"
        = link_to "Sign Out", destroy_user_session_path, method: :delete, class: "strip-color"
      - else
        = link_to "Sign Up", new_user_registration_path, class: "strip-color"
